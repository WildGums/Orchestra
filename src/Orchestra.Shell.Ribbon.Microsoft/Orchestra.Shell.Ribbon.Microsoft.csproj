<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>net46;net47;netcoreapp3.0</TargetFrameworks>
    <AssemblyName>Orchestra.Shell.Ribbon.Microsoft</AssemblyName>
    <RootNamespace>Orchestra</RootNamespace>
    <DefaultLanguage>en-US</DefaultLanguage>
    <PackageId>Orchestra.Shell.Ribbon.Microsoft</PackageId>
    <PackageVersion>1.0.0-alpha0001</PackageVersion>
    <Description>Orchestra shell using Microsoft ribbon library.</Description>
    <PackageTags>orc;orchestra;wpf;xaml;shell;ribbon;microsoft</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <UseWpf>true</UseWpf>
    <UseWindowsForms>true</UseWindowsForms>
    <ExtrasEnableImplicitWpfReferences>true</ExtrasEnableImplicitWpfReferences>
    <ExtrasEnableImplicitWinFormsReferences>true</ExtrasEnableImplicitWinFormsReferences>
  </PropertyGroup>

  <PropertyGroup>
    <!-- SonarQube requires a project guid -->
    <ProjectGuid>42512A08-C1DE-495D-B242-97DBB5E2A664</ProjectGuid>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="MethodTimer.Fody" Version="2.3.0" PrivateAssets="all" />
    <PackageReference Include="Catel.Core" Version="5.10.0-beta0008" />
    <PackageReference Include="MethodTimer.Fody" Version="2.3.2" PrivateAssets="all" />
    <PackageReference Include="Catel.Core" Version="5.10.0-beta0008" />
    <PackageReference Include="Catel.Fody" Version="3.9.0" PrivateAssets="all" />
    <PackageReference Include="Catel.MVVM" Version="5.10.0-alpha0038" />
    <PackageReference Include="Fody" Version="4.0.2" PrivateAssets="all">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Orc.Controls" Version="3.2.0-alpha0061" />
    <PackageReference Include="LoadAssembliesOnStartup.Fody" Version="3.0.7" PrivateAssets="all" />
    <PackageReference Include="LoadAssembliesOnStartup.Fody" Version="3.0.8" PrivateAssets="all" />
    <PackageReference Include="ModuleInit.Fody" Version="1.9.0" PrivateAssets="all" />
    <PackageReference Include="Obsolete.Fody" Version="4.4.3" PrivateAssets="all" />
    <PackageReference Include="WpfAnalyzers" Version="2.2.0.2" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Orchestra.Core\Orchestra.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Windows.Controls.Ribbon" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="NETStandard.Library" Version="2.0.1" />
  </ItemGroup>

  <Import Project="..\Orchestra.Shell.Shared\Orchestra.Shell.Shared.projitems" Label="Shared" />
  <Import Project="..\Orchestra.Shell.Ribbon.Shared\Orchestra.Shell.Ribbon.Shared.projitems" Label="Shared" />
  
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props')" />
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props')" />
</Project>