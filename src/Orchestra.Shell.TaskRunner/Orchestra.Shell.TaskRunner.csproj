<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>net46;net47;netcoreapp3.0</TargetFrameworks>
    <AssemblyName>Orchestra.Shell.TaskRunner</AssemblyName>
    <RootNamespace>Orchestra</RootNamespace>
    <DefaultLanguage>en-US</DefaultLanguage>
    <PackageId>Orchestra.Shell.TaskRunner</PackageId>
    <PackageVersion>1.0.0-alpha0001</PackageVersion>
    <Description>Orchestra task runner shell library.</Description>
    <PackageTags>orc;orchestra;wpf;xaml;shell;task;runner</PackageTags>
    <UseWpf>true</UseWpf>
  </PropertyGroup>

  <PropertyGroup>
    <!-- SonarQube requires a project guid -->
    <ProjectGuid>D93A4322-36E1-4F2E-851A-FF2C7F6373C7</ProjectGuid>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="MethodTimer.Fody" Version="2.2.2" PrivateAssets="all" />
    <PackageReference Include="Catel.Core" Version="5.9.0-alpha0017" />
    <PackageReference Include="Catel.Fody" Version="3.5.0" PrivateAssets="all" />
    <PackageReference Include="Catel.MVVM" Version="5.9.0-alpha0017" />
    <PackageReference Include="Fody" Version="3.3.3" PrivateAssets="all">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="LoadAssembliesOnStartup.Fody" Version="2.1.0" PrivateAssets="all" />
    <PackageReference Include="ModuleInit.Fody" Version="1.8.3" PrivateAssets="all" />
    <PackageReference Include="Obsolete.Fody" Version="4.4.3" PrivateAssets="all" />
    <PackageReference Include="Orc.Controls" Version="3.2.0-alpha0015" />
    <PackageReference Include="Orc.LogViewer" Version="3.2.0-alpha0002" />
    <PackageReference Include="WpfAnalyzers" Version="2.2.0.2" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Orchestra.Core\Orchestra.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="NETStandard.Library" Version="2.0.1" />
  </ItemGroup>

  <Import Project="..\Orchestra.Shell.Shared\Orchestra.Shell.Shared.projitems" Label="Shared" />
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props')" />
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props')" />
</Project>